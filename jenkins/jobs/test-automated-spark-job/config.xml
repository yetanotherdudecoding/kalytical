<?xml version='1.1' encoding='UTF-8'?>
<project>
  <actions/>
  <description>Run spark application on kubernetes</description>
  <keepDependencies>false</keepDependencies>
  <properties>
    <hudson.model.ParametersDefinitionProperty>
      <parameterDefinitions>
        <hudson.model.StringParameterDefinition>
          <name>NUM_EXECUTORS</name>
          <description>Number of spark executors</description>
          <defaultValue>2</defaultValue>
          <trim>false</trim>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>K8S_NAMESPACE</name>
          <description></description>
          <defaultValue>default</defaultValue>
          <trim>false</trim>
        </hudson.model.StringParameterDefinition>
        <hudson.model.TextParameterDefinition>
          <name>SUBMIT_PARAMS</name>
          <description></description>
          <defaultValue>--master k8s://https://10.142.0.3:6443 \
--deploy-mode cluster \
--name spark-pi \
--class org.apache.spark.examples.SparkPi \
--conf spark.executor.instances=1 \
--conf spark.kubernetes.container.image=instance-1.us-east1-b.c.sandbox-224519.internal:8080/spark:2.3.1 \
http://instance-1.us-east1-b.c.sandbox-224519.internal/repository/dataproducts/examples/spark-examples_2.11-2.3.1.jar</defaultValue>
          <trim>false</trim>
        </hudson.model.TextParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>SUBMIT_POD_IMAGE</name>
          <description></description>
          <defaultValue>instance-1.us-east1-b.c.sandbox-224519.internal:8080/submitpod:201812263</defaultValue>
          <trim>false</trim>
        </hudson.model.StringParameterDefinition>
      </parameterDefinitions>
    </hudson.model.ParametersDefinitionProperty>
  </properties>
  <scm class="hudson.plugins.git.GitSCM" plugin="git@2.4.2">
    <configVersion>2</configVersion>
    <userRemoteConfigs>
      <hudson.plugins.git.UserRemoteConfig>
        <url>https://zerodown524@bitbucket.org/zerodown524/kalytical.git</url>
      </hudson.plugins.git.UserRemoteConfig>
    </userRemoteConfigs>
    <branches>
      <hudson.plugins.git.BranchSpec>
        <name>*/initial</name>
      </hudson.plugins.git.BranchSpec>
    </branches>
    <doGenerateSubmoduleConfigurations>false</doGenerateSubmoduleConfigurations>
    <submoduleCfg class="list"/>
    <extensions/>
  </scm>
  <canRoam>true</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers/>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <com.microsoft.jenkins.kubernetes.KubernetesDeploy plugin="kubernetes-cd@0.2.3">
      <context>
        <kubeconfigId>k8s-kube-config-secret</kubeconfigId>
        <credentialsType>KubeConfig</credentialsType>
        <ssh>
          <sshServer></sshServer>
          <sshCredentialsId>*</sshCredentialsId>
        </ssh>
        <kubeConfig>
          <path></path>
        </kubeConfig>
        <textCredentials>
          <serverUrl>https://</serverUrl>
          <certificateAuthorityData></certificateAuthorityData>
          <clientCertificateData></clientCertificateData>
          <clientKeyData></clientKeyData>
        </textCredentials>
        <configs>spark/spark-job.yaml</configs>
        <enableConfigSubstitution>true</enableConfigSubstitution>
        <secretName></secretName>
      </context>
    </com.microsoft.jenkins.kubernetes.KubernetesDeploy>
  </builders>
  <publishers/>
  <buildWrappers/>
</project>